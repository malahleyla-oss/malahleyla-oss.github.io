  <div class="overlay" id="overlay" hidden></div>

  <main id="content" class="content">
    <h1>Responsive Sidebar Demo</h1>
    <p>
      Click the hamburger to show/hide the side nav.<br>
      On desktop: content area feels wider when the nav is hidden.<br>
      On mobile (â‰¤768px): the nav becomes a full-screen drawer; tap overlay or press Esc to close.
    </p>
    <p>
      This page demonstrates the required DOM updates and responsive behavior from the assignment brief.
    </p>
  </main>


  <script>
   
    let isOpen = true;

    const body    = document.body;
    const btn     = document.getElementById('menuBtn');
    const sidebar = document.getElementById('sidebar');
    const overlay = document.getElementById('overlay');

    function applyState() {
      body.classList.toggle('open',  isOpen);
      body.classList.toggle('closed', !isOpen);
      btn.setAttribute('aria-expanded', String(isOpen));

      const isMobile = window.matchMedia('(max-width: 768px)').matches;
      if (overlay) {
        if (isOpen && isMobile) {
          overlay.hidden = false;
        } else {
          overlay.hidden = true;
        }
      }
    }

    function toggleNav() {
      isOpen = !isOpen;
      applyState();
    }

    btn.addEventListener('click', toggleNav);

 
    overlay.addEventListener('click', () => {
      if (isOpen) {
        isOpen = false;
        applyState();
      }
    });

   
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && isOpen) {
        isOpen = false;
        applyState();
      }
    });

    
    window.addEventListener('resize', applyState);

    
    applyState();
  </script>
</body>
</html>
