      height: 100dvh;
      position: sticky;
      top: 0;
      padding: 1rem;
      transform: translateX(0);
      transition: transform var(--transition);
      overflow-y: auto;
    }

    /* Content */
    .content {
      grid-area: content;
      padding: 1.25rem;
      transition: margin var(--transition), width var(--transition);
    }

  
    body.closed .sidebar {
      transform: translateX(-100%);
    }

    
    @media (max-width: 768px) {
      body {
        grid-template-columns: 1fr;
        grid-template-areas:
