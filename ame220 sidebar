        "sidebar content";
      transition: background var(--transition);
    }

    header {
      position: sticky;
      top: 0;
      z-index: 3;
      background: #fff;
      border-bottom: 1px solid #eee;
    }

    /* Sidebar */
    .sidebar {
      grid-area: sidebar;
      width: var(--sidebar-width);
      border-right: 1px solid #eee;
