<body class="open">

  <header>
    <button id="menuBtn"
            class="hamburger"
            aria-label="Toggle navigation"
            aria-controls="sidebar"
            aria-expanded="true">
      <span class="lines" aria-hidden="true"></span>
      <span>Menu</span>
    </button>
  </header>

  <aside id="sidebar" class="sidebar" role="navigation" aria-label="Primary">
